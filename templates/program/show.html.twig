{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}
    <div class="media">
        {% if program.poster %}<img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">{% endif %}
        <div class="media-body">
            <h1>{{ program.title }}</h1>
            <hr>
            <p><b>Catégorie</b> : {{ program.category.name }}</p>
            <p><b>Synopsis</b> :<br>{{ program.synopsis }}</p>
        </div>
    </div>
    <hr>
    <a href="{{ path('program_index') }}">Retour à la liste des séries</a>
{% endblock %}